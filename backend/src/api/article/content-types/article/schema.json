{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "url": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "fbPost": {
      "type": "text"
    },
    "articleText": {
      "type": "dynamiczone",
      "components": [
        "img.img-with-description",
        "text.paragraph"
      ]
    },
    "publishDate": {
      "type": "date"
    }
  }
}
